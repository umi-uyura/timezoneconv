{
  "name": "timezoneconv",
  "version": "0.1.0",
  "description": "Timezone converter",
  "main": "index.html",
  "scripts": {
    "babelify": "browserify -t babelify src/app.jsx -o build/app.js",
    "watchify": "watchify -t babelify src/app.jsx -o build/app.js -v",
    "beefy": "beefy src/app.jsx:build/app.js src --live --open -- -t babelify",
    "licensify": "NODE_ENV=production browserify -t babelify src/app.jsx -p licensify -o build/app.js",
    "minify:html": "html-minifier -c html-minifier.conf index.html -o public/index.html",
    "minify:js": "uglifyjs build/app.js -o public/build/app.js --compress drop_console=true --mangle --comments '/generated by licensify/'",
    "minify:css": "cleancss -o public/style/app.css style/app.css",
    "prebuild": "mkdir -p public/build && mkdir -p public/style && cp -R img public/",
    "build": "npm run prebuild && npm run licensify && npm run minify:html && npm run minify:js && npm run minify:css",
    "clean": "rm -rf public/*",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Umi Uyura",
  "license": "MIT",
  "dependencies": {
    "jstimezonedetect": "^1.0.5",
    "material-ui": "^0.11.1",
    "moment": "^2.10.6",
    "moment-timezone": "^0.4.0",
    "react": "^0.13.3",
    "react-tap-event-plugin": "^0.1.7",
    "underscore": "^1.8.3"
  },
  "devDependencies": {
    "babelify": "^6.3.0",
    "beefy": "sberan/beefy#fix-live-reload-reliability",
    "browserify": "^11.1.0",
    "clean-css": "^3.4.3",
    "html-minifier": "^0.7.2",
    "licensify": "^2.0.1",
    "uglify-js": "^2.4.24",
    "watchify": "^3.4.0"
  }
}
